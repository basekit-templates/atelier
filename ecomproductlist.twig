{% extends "layout.twig" %}
{% block content %}


<!-- Navigation Container -->
<div class="ecom-list-page">
    <div class="template-feature">


            <!-- Header -->
            {% include "includes/header.twig" %}


            <div role="main">

                <!-- Main Zone -->
                {{zone('main')|raw}}

            </div>


            <!-- Footer -->
            {% include "includes/footer.twig" %}


    </div>
</div>


{% endblock %}


{% block scripts %}
    <script>
        $(document).on("click", ".toggle-filter", function() {
            $( "body" ).toggleClass( "filters-open" );
        });


        $(function() {

        $(".toggle-filter").click(function() {

            $(this).prepend('<span class="animate"></span>')
                $(".animate").animate({
                    width: 80,
                    height: 80,
                    opacity: 0
                 },
                 500,
                 function() {
                    $(this).remove();
                 });

                $(this).toggleClass('active');
           })
        })
    </script>
{% endblock %}
